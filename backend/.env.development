# Development Environment Configuration

# Application
ENVIRONMENT=development
DEBUG=true
HOST=localhost
PORT=8000

# Security (CHANGE IN PRODUCTION!)
SECRET_KEY=dev-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database (MySQL XAMPP for development)
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=hrbooteh_db
DATABASE_URL=mysql://root:@localhost:3306/hrbooteh_db

# AI Configuration (Optional - uses stub implementation if not set)
# OPENAI_API_KEY=your_openai_api_key
# ANTHROPIC_API_KEY=your_anthropic_api_key
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.7

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=logs/hrbooteh.log

# CORS Origins
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:8080","http://127.0.0.1:3000","http://127.0.0.1:5173","http://127.0.0.1:8080"]
