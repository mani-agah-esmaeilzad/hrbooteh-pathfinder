# Production Environment Configuration Template
# Copy this to .env.production and fill in your actual values

# Application
ENVIRONMENT=production
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Security - MUST CHANGE THESE IN PRODUCTION!
SECRET_KEY=your-super-secret-production-key-here-minimum-32-characters
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database - PostgreSQL for production
DATABASE_URL=postgresql://username:password@localhost:5432/hrbooteh_db
DB_HOST=localhost
DB_PORT=5432
DB_USER=hrbooteh_user
DB_PASSWORD=secure_password_here
DB_NAME=hrbooteh_db

# AI Configuration - Add your API keys
OPENAI_API_KEY=sk-your-openai-api-key-here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.7

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password
FROM_EMAIL=noreply@hrbooteh.com

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/hrbooteh.log

# CORS Origins - Add your production domains
ALLOWED_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]
